---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, PORTFOLIO_URL, HOME_SECTIONS, CALL_TO_ACTION, HOME_INTRO } from '../consts';
import { getCollection } from 'astro:content';
import Image from '../components/Image.astro';
import Link from '../components/Link.astro';
import { BASE_PATH } from '../../astro.config.mjs';

// Get the latest blog post
const posts = await getCollection('blog');
const latestPost = posts.sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())[0];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<Header />
		<main>
			<!-- Hero Section -->
			<div class="hero">
				<div class="container">
					<div class="hero-content">
						<h1>{HOME_INTRO.title}</h1>
						<p class="intro-text">
							{HOME_INTRO.text}
						</p>
					</div>
				</div>
			</div>

			<div class="container">
				<div class="main-grid">
					<!-- Featured Latest Blog Post -->
					<section class="featured-post">
						<h2><span class="emoji">üìù</span> Nieuwste Inzicht</h2>
						<div class="post-card">
							{latestPost.data.heroImage && (
								<Image 
									src={latestPost.data.heroImage}
									alt={latestPost.data.title}
									class="hero-image"
								/>
							)}
							<div class="post-content">
								<h3>{latestPost.data.title}</h3>
								<p>{latestPost.data.description}</p>
								<Link href={`/blog/${latestPost.id}`} class="read-more">Lees verder ‚Üí</Link>
							</div>
						</div>
					</section>

					<!-- Main Content Sections -->
					<div class="grid-sections">
						{Object.values(HOME_SECTIONS).map((section) => (
							<section class="content-section">
								<h3><span class="emoji">{section.title.split(' ')[0]}</span> {section.title.split(' ').slice(1).join(' ')}</h3>
								<ul>
									{section.items.map((item) => (
										<li>{item}</li>
									))}
								</ul>
							</section>
						))}
					</div>
				</div>

				<!-- Call to Action -->
				<section class="cta-section">
					<div class="cta-content">
						<p>
							{CALL_TO_ACTION.blog} <a href="/blog" class="cta-link">Bekijk alle artikelen ‚Üí</a>
						</p>
						<p set:html={CALL_TO_ACTION.portfolio} />
						<a href={PORTFOLIO_URL} target="_blank" class="cta-link">Neem contact op ‚Üí</a>
					</div>
				</section>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	::root {
		--primary-gradient: linear-gradient(135deg, #2563eb, #4f46e5);
		--secondary-gradient: linear-gradient(135deg, #f97316, #ef4444);
		--surface-gradient: linear-gradient(135deg, #f8fafc, #f1f5f9);
		--max-width: min(1400px, 90vw);
		--container-padding: max(1.5rem, calc((100vw - var(--max-width)) / 2));
	}

	body {
		font-family: 'Inter', sans-serif;
		background: #fafafa;
	}

	.container {
		width: 100%;
		max-width: var(--max-width);
		margin: 0 auto;
		padding: 0 var(--container-padding);
	}

	.main-grid {
		display: grid;
		grid-template-columns: minmax(400px, 2fr) 3fr;
		gap: 4rem;
		margin: 4rem 0;
		align-items: start;
	}

	.hero {
		position: relative;
		background: var(--primary-gradient);
		padding: 6em 0 8em;
		margin-bottom: -4em;
	}

	.hero::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		height: 4em;
		background: linear-gradient(to bottom right, transparent 49.5%, #fafafa 50%);
	}

	.hero-content {
		max-width: min(1000px, 90%);
		margin: 0 auto;
		text-align: center;
	}

	.hero h1 {
		font-size: clamp(2em, 5vw, 3em);
		font-weight: 700;
		margin-bottom: 0.5em;
		letter-spacing: -0.02em;
	}

	.intro-text {
		font-size: clamp(1.1em, 2vw, 1.25em);
		line-height: 1.6;
		opacity: 0.9;
		font-weight: 400;
		max-width: 44em;
		margin: 0 auto;
	}

	.emoji {
		display: inline-block;
		margin-right: 0.3em;
		filter: saturate(1.2);
	}

	h2, h3 {
		font-weight: 600;
		letter-spacing: -0.01em;
		color: #1e293b;
	}

	.featured-post {
		position: sticky;
		top: 2rem;
		height: fit-content;
	}

	.featured-post h2 {
		font-size: 1.75em;
		margin-bottom: 1em;
	}

	.post-card {
		display: flex;
		flex-direction: column;
		background: white;
		border-radius: 16px;
		overflow: hidden;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
		transition: all 0.3s ease;
	}

	.post-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
	}

	.hero-image {
		width: 100%;
		height: auto;
		object-fit: cover;
		aspect-ratio: 16/9;
	}

	.post-content {
		padding: 2em;
	}

	.post-content h3 {
		font-size: 1.5em;
		margin: 0 0 0.8em 0;
		line-height: 1.3;
	}

	.post-content p {
		color: #475569;
		line-height: 1.6;
		margin-bottom: 1.5em;
	}

	.read-more {
		display: inline-flex;
		align-items: center;
		color: #4f46e5;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.2s ease;
	}

	.read-more:hover {
		color: #4338ca;
		transform: translateX(4px);
	}

	.grid-sections {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2em;
	}

	.content-section {
		padding: 2em;
		background: white;
		border-radius: 16px;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
		transition: transform 0.3s ease;
	}

	.content-section:hover {
		transform: translateY(-4px);
	}

	.content-section h3 {
		font-size: 1.3em;
		margin: 0 0 1.2em 0;
		display: flex;
		align-items: center;
	}

	ul {
		padding-left: 1.2em;
		margin: 0;
	}

	li {
		margin: 0.8em 0;
		color: #475569;
		line-height: 1.5;
		position: relative;
	}

	li::before {
		content: "‚Ä¢";
		color: #4f46e5;
		font-weight: bold;
		position: absolute;
		left: -1em;
	}

	.cta-section {
		background: var(--surface-gradient);
		border-radius: 16px;
		padding: 3em 2em;
		margin: 3em auto;
		text-align: center;
	}

	.cta-content {
		max-width: 700px;
		margin: 0 auto;
	}

	.cta-section p {
		margin: 1.2em 0;
		font-size: 1.1em;
		color: #1e293b;
	}

	.cta-link {
		display: inline-flex;
		align-items: center;
		margin-left: 0.5em;
		padding: 0.5em 1em;
		background: var(--primary-gradient);
		color: white;
		text-decoration: none;
		font-weight: 500;
		border-radius: 8px;
		transition: all 0.2s ease;
	}

	.cta-link:hover {
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(79, 70, 229, 0.2);
	}

	@media (max-width: 1200px) {
		.main-grid {
			grid-template-columns: 1fr;
			gap: 3rem;
		}

		.featured-post {
			position: static;
		}

		.grid-sections {
			grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		}
	}

	@media (max-width: 768px) {
		:root {
			--max-width: 100vw;
		}

		.hero {
			padding: 4em 0 6em;
			margin-bottom: -2em;
		}

		.hero::after {
			height: 2em;
		}

		.hero-content {
			padding: 0 1rem;
		}

		.grid-sections {
			grid-template-columns: 1fr;
		}

		.post-content {
			padding: 1.5em;
		}

		.cta-section {
			padding: 2em 1.5em;
			margin: 2em 0;
		}
	}
</style>
